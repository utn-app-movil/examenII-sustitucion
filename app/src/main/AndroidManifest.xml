<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cr.ac.utn.appmovil.products">

    <!-- Permisos de Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Restapi"
        android:usesCleartextTraffic="true">

        <!-- LoginActivity - Pantalla INICIAL -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity - Pantalla despuÃ©s del login -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- ProductListActivity - Lista de productos -->
        <activity
            android:name=".ProductListActivity"
            android:exported="false"
            android:label="Products List" />

        <!-- ProductFormActivity - Formulario de productos -->
        <activity
            android:name=".ProductFormActivity"
            android:exported="false"
            android:label="Product Form" />

    </application>

</manifest>